extends ./common/common

block content 
    h1 Log in
    if errors
        each error in errors
            .alert.alert-danger=error
    form(action="/login", method="POST")
        .form-group
            label(for="email") Email
            input#email.form-control(type="email", name="email", value= values ? values.email : '')
        .form-group
            label(for="password") Password
            input#password.form-control(type="password", name="password", value= values ? values.password : '')
        .form-group 
            label(for="account_type") Account Type
            select#account-type.form-control(name="account_type")
                option(value="owner_account") Owner
                option(value="renter_account") Renter
                option(value="admin_account") Admin
        button.btn.btn-primary Login